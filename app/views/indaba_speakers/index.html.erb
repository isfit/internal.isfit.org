<h1>All contact logs</h1>

<div class="contact-log">
  <table class="table table-bordered table-striped sortable">
    <thead>
      <tr>
        <th>Navn</th>
        <th>Stilling</th>
        <th>Fakta</th>
        <th>KontaktInfo</th>
        <th>Kommentar</th>
        <th></th>
      </tr>
    </thead>
    <% for speaker in @indaba_speakers %>
    <tr>
      <td><%= speaker.firstname + " " + speaker.lastname %></td>
      <td><%= speaker.profession %></td>
      <td><%= speaker.fakta %></td>
      <td><%= speaker.contactinfo || !speaker.contactinfo.empty? || "tom" %></td>
      <td><%= speaker.comment %></td>
      <td width="100px">
        <div class="btn-group">
          <%# link_to("Show", speaker, class: "btn btn-info") %>
          <a href="#" class="btn btn-info dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%# link_to("Delete", speaker,  method: :delete, confirm: 'Are you sure you want to delete this contact log?') %></li>
          </ul>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
</div>

