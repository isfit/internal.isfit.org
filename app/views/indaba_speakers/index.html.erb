<h1>All contact logs</h1>
<div class="container-fluid contact-log">
<%=select_tag "years", options_for_select(@years.collect{ |u| [u.year, u.year] }, params[:year])%>
  <table class="table table-bordered sortable">
    <thead>
      <tr>
        <th class="col-md-1 sort">Etternavn</th>
        <th class="col-md-1 sort">Fornavn</th>
        <th class="col-md-1 sort">Stilling</th>
        <th class="col-md-1 sort">Status</th>
        <th class="col-md-1"></th>
      </tr>
    </thead>
    <% for speaker in @indaba_speakers %>
    <tr>
      <td><%= speaker.lastname %></td>
      <td><%= speaker.firstname %></td>
      <td><%= speaker.profession %></td>
      <td class = <%= speaker.status_color_class%>><%= speaker.status_name %></td>
      <td width="100px">
        <%= link_to 'Show', speaker, class: "btn btn-info"%>
      </td>
    </tr>
    <% end %>
  </table>
</div>

