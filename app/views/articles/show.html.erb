<h1>
  <%= @article.title %>
</h1>
<%= image_tag @article.article_image.url, class: :center %>
<p>
  <%= link_to @article.user.full_name, user_path(@article.user) %>
</p>
<p>
  <%= format @article.body %>
</p>
<p>
	<h3>Attendings</h3>
</p>	
<p>
	<ul>
		<% for user in @attending_users %>
			<li><%= user %> </li>
		<% end %>
	</ul>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
