<% content_for :sidebar do %>
  <div id="kvitter" class="well widget"></div>
<% end %>

<div class="well">
  <h3>Hva skjer i ISFiT nå?</h3>
  <h4>Opptak!</h4>
  <p>Følg med på <%= link_to "rekrutteringssiden", applicants_path %> for å se søkere strømme inn :)</p>
  <h4>Apps!</h4>
  <p>Gå til <%= link_to "mail", "http://mail.isfit.no" %> eller <%= link_to "docs", "http://docs.isfit.no" %>.</p>
</div>

<div class="articles">
    <%= link_to "Create article", new_article_path, class: "btn btn-primary" %>
    <% for article in @articles %>
      <div class="article">
        <div class="btn-group pull-right">
          <%= link_to :edit, edit_article_path(article), :class => "btn"%>
          <%= link_to :delete, article, confirm: "Are you sure?", method: :delete, :class => "btn btn-danger"  %>

          <% if article.attending && ArticlesAttending.where(:user_id => current_user.id, :article_id => article.id).blank? %>
            <%= link_to 'Attend', attending_article_path(article), :class =>"btn", method: :post %>
          <% elsif article.attending && ArticlesAttending.where(:user_id => current_user.id, :article_id => article.id).blank? == false %>
            <%= link_to 'Not attend', not_attending_article_path(article), :class =>"btn", method: :post %>
          <% end %>

        </div>
        <h1><%= link_to article.title, article %>
        </h1>
          <small>Created <%= time_ago_in_words(article.created_at) %> ago by <%= link_to article.user.full_name, article.user %>.</small>
        <%= image_tag article.article_image.url(:thumb), class: :right %> 
        <p>
          <%= format(truncate(article.body, length: 1000, omission: "...")) %>
          <%= article.body.length > 1000 ? (link_to("Read more...", article)):'' %>
        </p>
          <% if article.attending %>
            <small>
              <%= ArticlesAttending.where(:user_id => current_user.id, :article_id => article.id).count() %> people are attending.
            </small>
          <% else %>
            <small>
              It is not possible to attend this article.
            </small>
          <% end %>

      </div>
  <% end %>
</div>
<%= will_paginate @articles %>
