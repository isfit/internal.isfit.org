<%= simple_form_for(@article, wrapper: :bootstrap, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <%= f.input :title, :class => "col-md-6" %>
    <%= f.input :body, :class => "col-md-6" %>
    <%= f.input :sticky %>
    <%= f.input :end_at %>
    <%= f.input :attending %>
    <%= f.input :deleted %>
    <%= f.input :article_image %>
  </fieldset>
  <%= f.submit %>
<% end %>
