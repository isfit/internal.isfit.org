<h1>Participant applications</h1>

<p>
  Search for a participant in the form below. None of the fields are mandatory.
</p>

<%= search_form_for @search, url: search_participants_path, method: :post do |f| %>
  <%= f.label :first_name_cont, "First name" %>
  <%= f.text_field :first_name_cont %>
  <%= f.label :last_name_cont, "Last name" %>
  <%= f.text_field :last_name_cont %>
  <%= f.label :email_cont, "E-mail" %>
  <%= f.text_field :email_cont %>
  <br> 
  <%= f.submit "Search" %>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Country</th>
      <th>E-mail</th>
      <th>Show</th>
      <th>Edit</th>
    </tr>
  </thead>
  <% @participants.each do |participant| %>
    <tr>
      <td><%= participant.last_name %></td>
      <td><%= participant.first_name %></td>
      <td><%= participant.country.name %></td>
      <td><%= participant.email %></td>
      <td><%= link_to "show", participant_path(participant), :class => "btn-primary btn" %></td>
      <td><%= link_to "Edit", edit_participant_path(participant), :class => "btn" %></td>
    </tr>
  <% end %>

</table>
