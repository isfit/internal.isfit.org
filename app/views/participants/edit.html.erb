<div class="pull-right">
  <%= link_to "Back", participants_path, :class => "btn"%>
</div>

<h1>Edit participant</h1>

<%= simple_form_for(@participant, :html => { :class => "form-horizontal" }) do |f| %>
  <%= f.error_messages %>
  <%= f.input :first_name, :input_html => { :class => "col-md-4" } %>
  <%= f.input :last_name, :input_html => { :class => "col-md-4" } %>
  <%= f.input :address1, :label => "Address", 
                        :input_html => { :class => "col-md-4" } %>
  <%= f.input :zipcode, :input_html => { :class => "col-md-4" } %>
  <%= f.input :city, :input_html => { :class => "col-md-4" } %>
  <%= f.input :country_id, :collection => @countries, :as => :select, 
                           :input_html => { :class => "col-md-4" } %>
  <%= f.input :phone, :input_html => { :class => "col-md-4" } %>
  <%= f.input :email, :input_html => { :class => "col-md-4" } %>
  <%= f.input :birthdate, :as => :date, :start_year => Date.today.year - 100,
                          :end_year => Date.today.year - 17, 
                          :order => [:year, :month, :day],
                          :input_html => { :class => "col-md-4" }%>
  <%= f.input :sex, :as => :radio_buttons, 
                    :collection => [["female", "f"], ["male", "m"]] %>
  <%= f.input :university, :input_html => { :class => "col-md-4" } %>
  <%= f.input :field_of_study, :input_html => { :class => "col-md-4" } %>

  <%= f.input :workshop1, :collection => @workshops, :as => :select,
                          :input_html => { :class => "col-md-4" } %>
  <%= f.input :workshop2, :collection => @workshops, :as => :select, 
                          :input_html => { :class => "col-md-4" } %>
  <%= f.input :workshop3, :collection => @workshops, :as => :select,
                          :input_html => { :class => "col-md-4" } %>

  <%= f.input :essay1, :label => "General essay", 
                       :input_html => { :class => "col-md-4", :rows => 10 } %>
  <%= f.input :essay2, :label => "Workshop essay", 
                       :input_html => { :class => "col-md-4", :rows => 10 } %>
  <%= f.input :travel_apply, :as => :boolean %>
  <%= f.input :travel_essay, :label => "Travel essay",
                       :input_html => { :class => "col-md-4", :rows => 10 } %>
  <%= f.input :travel_amount, :input_html => { :class => "col-md-4" } %>
  <%= f.input :travel_nosupport_other, :as => :radio_buttons, 
                    :label => "Other travel support?",
                    :collection => [["yes", "1"], ["no", "0"]] %>
  <%= f.input :travel_nosupport_cancome, :as => :radio_buttons,
                    :label => "Can still attend?",
                    :collection => [["yes", "1"], ["no", "0"]] %>
  <%= f.button :submit, :class => "btn-primary"%>
<% end %>
