<%= simple_form_for([:editorial,@article], wrapper: :horizontal_form, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <%= f.input :title, :class => "col-md-6" %>
    <%= f.input :body, :class => "col-md-6" %>
    <%= f.input :sticky %>
    <%= f.input :end_at, :as => :datetime_picker %>
    <%= f.input :attending %>
    <%= f.input :deleted %>
    <%= f.input :article_image, as: :file %>
  </fieldset>
  <%= f.submit %>
<% end %>
