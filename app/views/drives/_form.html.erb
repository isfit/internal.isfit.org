<%= simple_form_for(@drive, wrapper: :horizontal_form, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <%= f.input :start_time, :as => :datetime_picker %>
    <%= f.input :end_time, :as => :datetime_picker %>
    <%= f.input :group_id, collection: @user.positions.last.groups.collect { |g| [ g.name_en, g.id ] } %>
    <%= f.input :description %>
  </fieldset>
  <%= f.submit %>
<% end %>