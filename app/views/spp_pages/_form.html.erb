<%= formatting %>
<%= bootstrap_form_for(@spp_page) do |f| %>
  <%= f.error_messages %>
  <%= f.fieldset "spp_page" do %>
          <%= f.text_field :title_en, class: "col-md-6" %>
          <%= f.text_field :title_no, class: "col-md-6" %>
          <%= f.text_area :ingress_en , class: "col-md-6", rows: 3%>
          <%= f.text_area :ingress_no , class: "col-md-6", rows: 3%>
          <%= f.text_area :body_en , class: "col-md-6"%>
          <%= f.text_area :body_no , class: "col-md-6"%>
          <%= f.text_field :image_text , class: "col-md-6"%>
      <% end %>
  <%= f.submit "Submit", class: "btn" %>
<% end %>
