<%= render "transport/nav" %>

<div class="col-md-6">
<h2>Cars</h2>	
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Seats</th>
      <th>Space</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= car.description %></td>
        <td><%= car.seats %></td>
        <td><%= car.space %></td>
        <td><%= link_to 'Show', transport_car_path(car) %></td>
        <td><%= link_to 'Edit', edit_transport_car_path(car) %></td>
        <td><%= link_to 'Destroy', transport_car_path(car), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_transport_car_path %>

</div>
<div class="col-md-6">
	<h2>New Car</h2>
	<%= render "form" %>
</div>