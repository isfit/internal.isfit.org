<table id="todo_table"  class="table table-hover col-md-9">
	<thead>
		<th>ID</th>
		<th>Bil</th>
		<%if can? :manage, Drive %>
			<th> Sjåfør </th>
		<% end %>
		<th>Beskrivelse</th>
		<% if can? :manage, Drive %>
		<th>Kommentar</th>
		<% end %>
		<th>Dato</th>
		<th>Tid</th>
		<th>Status<th>
	</thead>
	<tbody>
		<% if can? :manage, Drive %>
			<%= render partial: "drive_admin", collection: @drives, as: :drive %>
		<% else %>
			<%= render @drives %>
		<% end %>

	</tbody>

</table