$('#notice').html('<div class="alert alert-success alert-dismissible" role="alert"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>Status changed</div>');

if( $('#transport-dash').length )         // use this if you are using id to check
{
	var el = $('#drive-<%= @drive.id %>').detach();
	$('#accordion-<%= @drive.status %>').append(el);

	var divList = $("#accordion-<%= @drive.status %>").children();
	divList.sort(function(a, b){
    return $(a).data("time")-$(b).data("time");
	});
	$("#accordion-<%= @drive.status %>").html(divList);
}
