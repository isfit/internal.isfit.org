<tr class="expand">
	<td><%= drive.id %></td>
	<td>
		<%= drive.car_desc %>
	</td>
	<td>
	<%if drive.driver %>
		<%= link_to(drive.driver_name, transport_driver_path(drive.driver)) %>
	<% else %>
		-
	<% end %>
	</td>
	<td>
		<div class="minimize expand_y">
			<%= drive.description %>
		</div>
	</td>
	<td id="<%= drive.id %>" class="closed">
		<div class="minimize expand_y" id="comment_text">
			<%= drive.comment %>
		</div>
	</td>
	<td><%= drive.time_summary %></td>
	<td class="drive_date"><%= drive.date_summary %></td>
	<td>
	<%= form_for([:transport, drive], remote: true) do |f| %>
	<div class="form-group">
		<%= f.collection_select(:status, Drive.get_statuses, :first, :last,{}, {:class=>'form-control', onchange: "$(this).parent('form').submit();"}) %>
	</div>
		<%= f.submit %>
	<% end %>

	</td>
	<td><%= link_to(:"Vis", transport_drive_path(drive)) %></td>
	<td><%= link_to(:Endre, edit_transport_drive_path(drive.id))%></td>
	<td>
		<%= link_to(:Fjern, transport_drive_path(drive), method: :delete, confirm: "Er du sikker på at du vil slette denne kjøringen? Husk, du kan redigere/endre den.") %>
	</td>
</tr>