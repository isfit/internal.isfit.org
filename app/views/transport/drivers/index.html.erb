<%= render "transport/nav" %>
<div class="row">
	<div id="drivers" class="col-md-4">
		<h2> Sjåfører </h4>
		<table class="table">
			<thead>
				<tr>
					<th>På oppdrag?</th>
					<th>Navn</th>
				</tr>
			</thead>
			<tbody>
				<% @drivers.each do |driver| %>
					<tr>
						<td>
						<% if driver.drives.occuring.present? %>
							<span class="glyphicon glyphicon-ok text-success"></span>
						<% else %>
							<span class="glyphicon glyphicon-remove text-danger"></span>
						<% end %>
						</td>
						<td><%= link_to(driver.username, [:transport,driver]) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div id="driver_create" class="col-md-4">
		<h2>Legg til ny sjåfør</h2>
		<%= render "form" %>
	</div>
</div>