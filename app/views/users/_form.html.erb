<%= bootstrap_form_for @user, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <%= f.fieldset "Personal information" do %>
    <%= f.text_field :given_name %>
    <%= f.text_field :family_name %>
    <%= f.text_field :date_of_birth, placeholder: "YYYY-MM-DD" %>
    <%= f.text_field :phone %>
    <%= f.text_field :private_email %>
    <%= f.text_field :twitter_username %>
    <%= f.text_field :address %>
    <%= f.text_field :postal_code %> 
    <%= f.text_field :city %>
    <%= f.select :gender, [[t('gender.choose'), nil],[t('gender.male'), 1], [t('gender.female'), 2], [t('gender.other'), 0]] %>
  <% end %>

  <fieldset>
    <legend>Education</legend>
    <%= f.text_field :study %>
  </fieldset>
  <fieldset>
    <legend>Tasks</legend>
    <%= f.text_area :tasks, size: "10x10" %>
  </fieldset>

  <fieldset>
    <legend>Administration</legend>
    <%= f.text_field :cardnumber_samfundet, "hint-title" => "Samfundet cardnumber", "hint-content" => "Your samfundet card number is the member id at the bottom right corner of the card." %>
  </fieldset>
  <fieldset>
    <legend>Next of kin</legend>
    <%= f.text_field :next_of_kin_name %>
    <%= f.text_field :next_of_kin_tlf %>
  </fieldset>
  <fieldset>
    <legend>Allergies</legend>
    <%= f.check_box :vegetarian %>
    <%= f.check_box :lactose_allergy %>
    <%= f.check_box :gluten_allergy %>
    <%= f.check_box :nut_allergy %>
    <%= f.check_box :fruit_allergy %>
    <%= f.text_field :other_allergy %>
  </fieldset>
  <fieldset>
    <legend>Other</legend>
    <%= f.text_field :local_paper, "hint-title" => "Local newspaper", "hint-content" => "Please enter your local newspaper, so we can try to publish stories about ISFiT in them" %>
    <%= f.file_field :profile_picture %>
  </fieldset>
    <%= f.submit (@user.new_record? ? "Sign up" : "Update"), class: "btn-primary btn" %>
<% end %>
