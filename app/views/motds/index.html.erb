<div class="pull-right">
  <%= link_to 'New Motd', new_motd_path, :class => "btn btn-primary"%>
</div>
<h1>motds</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
              <th>Msg</th>
              <th>Datetime</th>
            <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <% @motds.each do |motd| %>
    <tr>
              <td><%= motd.msg %></td>
              <td><%= motd.datetime %></td>
            <td><%= link_to 'Show', motd, :class => "btn-primary btn" %></td>
      <td><%= link_to 'Edit', edit_motd_path(motd), :class => "btn" %></td>
      <td><%= link_to 'Destroy', motd, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>

