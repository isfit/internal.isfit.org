<div class="pull-right">
  <%= link_to 'New Isfit tab', new_isfit_tab_path, :class => "btn btn-primary"%>
</div>
<h1>ISFiT.org tabs</h1>
<p>All tabs at isfit.org is listed below. The order is from left to right </p>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Weight</th>
      <th>Norwegian title</th>
      <th>English title</th>
      <th></th>
      <th>Rank</th>
    </tr>
  </thead>

  <% @isfit_tabs.each do |isfit_tab| %>
    <tr>
      <td><%= isfit_tab.weight %></td>
      <td><%= isfit_tab.name_no %></td>
      <td><%= isfit_tab.name_en %></td>
      <td width="75px">
        <div class="btn-group">
          <%= link_to 'Edit', edit_isfit_tab_path(isfit_tab), class: "btn btn-info" %>
          <a href="#" class="btn btn-info dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Show', isfit_tab %></li>
            <li><%= link_to 'Destroy', isfit_tab, confirm: 'Are you sure?', method: :delete%></li>
          </ul>
        </div>
      </td>
      <td><%= link_to("up", moveup_isfit_tab_path(isfit_tab), class: "btn")%> <%=link_to("down", movedown_isfit_tab_path(isfit_tab), class: "btn")%></td>
    </tr>
    <% end %>
  </table>

